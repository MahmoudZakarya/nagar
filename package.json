{
  "name": "nagar",
  "version": "1.0.0",
  "description": "",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:server": "vite",
    "dev:electron": "wait-on tcp:5173 && tsc -p electron && electron .",
    "build:client": "tsc && tsc -p tsconfig.server.json && tsc -p electron && vite build",
    "build:pack": "electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3-multiple-ciphers",
    "build": "npm run build:client && npm run rebuild && npm run build:pack",
    "start": "node dist-server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.nagar.erp",
    "productName": "Nagar ERP",
    "directories": {
      "output": "dist-installer"
    },
    "npmRebuild": true,
    "asarUnpack": [
      "node_modules/better-sqlite3-multiple-ciphers/**/*"
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nagar ERP",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "LICENSE.txt",
      "perMachine": true
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.13.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3-multiple-ciphers": "^12.6.2",
    "body-parser": "^2.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.2.1",
    "lucide-react": "^0.562.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.12.0"
  }
}
